<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.hilling.junit.cdi</groupId>
    <artifactId>cdi-test</artifactId>
    <version>0.0.2-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.7</java.version>
        <deltaspike.version>1.1.0</deltaspike.version>
        <cdi-1.0-weld.version>1.1.23.Final</cdi-1.0-weld.version>
        <cdi-1.1-weld.version>2.1.2.Final</cdi-1.1-weld.version>
        <cdi-1.2-weld.version>2.2.7.Final</cdi-1.2-weld.version>
        <cdi-2.0-weld.version>3.0.0.Alpha2</cdi-2.0-weld.version>
    </properties>

    <scm>
        <connection>scm:git:https://github.com/guhilling/cdi-test.git</connection>
        <developerConnection>scm:git:https://github.com/guhilling/cdi-test.git</developerConnection>
        <url>https://github.com/guhilling/cdi-test.git</url>
        <tag>HEAD</tag>
    </scm>

    <ciManagement>
        <system>Travis CI</system>
        <url>https://travis-ci.org/guhilling/cdi-test</url>
        <notifiers/>
    </ciManagement>

    <inceptionYear>2014</inceptionYear>

    <developers>
        <developer>
            <name>Gunnar Hilling</name>
            <email>cdi-test@hilling.de</email>
            <organization>Gunnar Hilling IT Consulting GmbH</organization>
            <timezone>+1</timezone>
            <roles>
                <role>architect</role>
                <role>committer</role>
            </roles>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>local</id>
            <url>file:/Users/gunnar/.m2/repository</url>
        </repository>
    </distributionManagement>

    <modules>
        <module>cdi-test-core</module>
        <module>cdi-test-db</module>
        <module>integration-tests</module>
        <module>cdi-test-cucumber</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.11</version>
            </dependency>
            <dependency>
                <groupId>org.javassist</groupId>
                <artifactId>javassist</artifactId>
                <version>3.18.1-GA</version>
            </dependency>
            <dependency>
                <groupId>javax.enterprise</groupId>
                <artifactId>cdi-api</artifactId>
                <version>1.1</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>javax.annotation</groupId>
                <artifactId>javax.annotation-api</artifactId>
                <version>1.2</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>1.9.5</version>
            </dependency>
            <dependency>
                <groupId>org.apache.deltaspike.cdictrl</groupId>
                <artifactId>deltaspike-cdictrl-api</artifactId>
                <version>${deltaspike.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.deltaspike.core</groupId>
                <artifactId>deltaspike-core-api</artifactId>
                <version>${deltaspike.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.deltaspike.core</groupId>
                <artifactId>deltaspike-core-impl</artifactId>
                <version>${deltaspike.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.deltaspike.cdictrl</groupId>
                <artifactId>deltaspike-cdictrl-weld</artifactId>
                <version>${deltaspike.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jboss.weld.se</groupId>
                <artifactId>weld-se-core</artifactId>
                <version>${weld.version}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-jdk14</artifactId>
                <version>1.7.5</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>cdi-1.1</id>
            <properties>
                <weld.version>${cdi-1.1-weld.version}</weld.version>
            </properties>
        </profile>
        <profile>
            <id>cdi-2.0</id>
            <properties>
                <weld.version>${cdi-2.0-weld.version}</weld.version>
            </properties>
        </profile>
        <profile>
            <id>cdi-1.2</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <weld.version>${cdi-1.2-weld.version}</weld.version>
            </properties>
        </profile>
    </profiles>

</project>